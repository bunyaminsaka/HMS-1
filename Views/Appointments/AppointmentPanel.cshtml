                        <!-- Doctors will be dynamically populated based on specialization -->
                    </select>
                </div>
                <div class="mb-3">
                    <label for="appointmentTime" class="form-label">Time</label>
                    <select class="form-select" id="appointmentTime" required>
                        <option value="" selected disabled>Select time</option>
                        <option value="09:00 AM">09:00 AM</option>
                        <option value="10:00 AM">10:00 AM</option>
                        <option value="11:00 AM">11:00 AM</option>
                        <option value="01:00 PM">01:00 PM</option>
                        <option value="02:00 PM">02:00 PM</option>
                        <option value="03:00 PM">03:00 PM</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="appointmentDetails" class="form-label">Details</label>
                    <textarea class="form-control" id="appointmentDetails" rows="3" placeholder="Enter appointment details" required></textarea>
                </div>
                <button type="submit" class="btn btn-custom">Save Appointment</button>
            </form>
        </div>

        <!-- All Appointments -->
        <div class="card p-4">
            <h5 class="card-title">All Appointments</h5>
            <ul id="allAppointmentsList" class="list-group list-group-flush">
                <!-- Appointments will be dynamically added here -->
            </ul>
        </div>
    </div>

